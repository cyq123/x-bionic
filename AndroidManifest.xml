<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imcore.xbionic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.imcore.xbionic.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.WelcomeTwoActivity"
            android:label="@string/title_activity_welcome_two" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.EnterActivity"
            android:label="@string/title_activity_enter" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.LoginEnterActivity"
            android:label="@string/title_activity_login_enter"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.RegisterEnterActivity"
            android:label="@string/title_activity_register_enter"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.QQLoginEnterActivity"
            android:label="@string/title_activity_QQ_Login_enter"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.SinaLoginEnterActivity"
            android:label="@string/title_activity_Sina_Login_enter"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name="com.imcore.xbionic.ui.LoginEnterAfterActivity"
            android:label="@string/title_activity_login_enter_after" 
            >
        </activity>
        <activity
            android:name="com.imcore.xbionic.fragment.HomeListHeaderActivity"
            android:label="@string/title_activity_home_list_header" >
        </activity>
    </application>

</manifest>