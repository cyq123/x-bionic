<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img1_home_list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/listbutton" />

    <ImageView
        android:id="@+id/img2_home_list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buluo" />

    <ImageView
        android:id="@+id/img3_home_list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img2_home_list_header_title"
        android:background="@drawable/xiajiantou" />

    <ImageView
        android:id="@+id/img4_home_list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbtnpic" />

</RelativeLayout>